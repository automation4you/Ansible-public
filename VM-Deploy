---
- name: Create a VM from a template
  hosts: localhost
  connection: local
  gather_facts: no
  tasks:
  - name: Clone the template
    vmware_guest:
      hostname: 192.168.23.26
      validate_certs: False
      name: testvm_2
      template: WINOS
      datacenter: Datacenter
      state: poweredon
      wait_for_ip_address: no
